{
  "name": "compare-env-action",
  "version": "1.0.0",
  "description": "A TypeScript tool to compare environment variable changes between Git references",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "compare": "tsx src/index.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:full": "tsx test-runner.ts full",
    "test:check": "tsx test-runner.ts check",
    "test:interactive": "tsx test-runner.ts interactive",
    "type-check": "tsc --noEmit",
    "lint": "tsx test-runner.ts lint",
    "clean": "rm -rf dist coverage"
  },
  "keywords": [
    "environment",
    "variables",
    "git",
    "diff",
    "comparison",
    "github",
    "ci",
    "cd",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "files": [
    "dist/**/*",
    "src/**/*",
    "README.md",
    "package.json"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.0.0",
    "typescript": "^5.9.3",
    "vitest": "^1.0.0",
    "@vitest/ui": "^1.0.0"
  }
}

{
  "name": "compare-env",
  "version": "1.0.0",
  "description": "A TypeScript tool to compare environment variable changes between Git references",
  "main": "dist/index.js",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "ncc build src/index.ts --minify -o dist",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "compare": "tsx src/index.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist coverage",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts"
  },
  "keywords": [
    "environment",
    "variables",
    "git",
    "diff",
    "comparison",
    "github",
    "ci",
    "cd",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "files": [
    "dist/**/*",
    "src/**/*",
    "README.md",
    "package.json"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitest/coverage-v8": "^4.0.7",
    "@vitest/ui": "^4.0.7",
    "depcheck": "^1.4.7",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "prettier": "^3.6.2",
    "tsx": "^4.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "vitest": "^4.0.7"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "@octokit/rest": "^22.0.1",
    "jiti": "^2.6.1"
  }
}
